<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layoutDirection="locale"
    android:orientation="vertical"
    tools:context=".activities.ChildSignedInActivity">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:id="@+id/connected_layout_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cloud_done" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/connected"
            android:textAlignment="center"
            android:textColor="@color/flatui_turquoise"
            android:layout_marginBottom="21dp"
            android:textSize="@dimen/text_size_16sp" />
        <EditText
            android:id="@+id/url_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/searchtobrowse"
            android:layout_margin="@dimen/margin_16dp"
            />
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/browser"
            android:onClick="goToWebView"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@color/colorPrimary"
            />

    </LinearLayout>

</LinearLayout>